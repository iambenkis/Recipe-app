<%= render partial: '/partials/navbar' %>
<div class="d-flex w-100 align-items-center justify-content-center">
    <%= form_with model: @food, url: foods_create_path, method: :post, local: true,class:"w-50 p-3 flex-column justify-content-center", scope: :food do |f| %>
        <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name,class:"form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :meadurement_unit %><br>
            <%= f.text_field  :meadurement_unit,class:"form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :price %><br>
            <%= f.number_field :price,class:"form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :quantity %><br>
            <%= f.number_field :quantity,class:"form-control" %>
        </div>

        <%= f.submit "Add Food", class: "btn btn-success" %>
    <% end %>
</div>
