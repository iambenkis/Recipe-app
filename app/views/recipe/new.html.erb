<div class="d-flex w-100 align-items-center justify-content-center">
    <%= form_with model: @new_recipe, url: recipe_create_path, method: :post, local: true,class:"w-50 p-3 flex-column justify-content-center", scope: :new_recipe do |f| %>
        <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name,class:"form-control" %>
        </div>

        <div class="form-group">
        <%= f.label :preparation_time %><br>
        <%= f.number_field  :preparation_time,class:"form-control" %>
        </div>

        <div class="form-group">
        <%= f.label :cooking_time %><br>
        <%= f.number_field :cooking_time,class:"form-control" %>
        </div>

        <div class="form-group">
        <%= f.label :description %><br>
        <%= f.text_area :description,class:"form-control" %>
        </div>

        <div class="form-group">
        <%= f.check_box :public %>
        <%= f.label :pet_dog, "public" %>
        </div>

        <%= f.submit "Add Recipe", class: "btn btn-success" %>
    <% end %>
</div>